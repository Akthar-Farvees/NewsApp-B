{
  "compilerOptions": {
    "target": "ES2020",               // Modern JS target
    "module": "ESNext",               // Needed for import.meta support
    "moduleResolution": "node",
    "esModuleInterop": true,          // Allows import/export compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   // Enables strict type-checking options
    "skipLibCheck": true,             // Speeds up build by skipping lib checks
    "outDir": "./dist",               // Output directory for compiled JS
    "rootDir": "./server",            // Your TS source root folder
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["server", "shared"],   // Add any other source folders if needed
  "exclude": ["node_modules", "dist"]
}
